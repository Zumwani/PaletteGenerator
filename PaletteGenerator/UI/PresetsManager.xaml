<UserControl x:Class="PaletteGenerator.UI.PresetsManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PaletteGenerator.UI" 
             xmlns:collections="clr-namespace:PaletteGenerator.Collections"
             Width="200" VerticalAlignment="Stretch" MinHeight="64" FontFamily="Segoe UI Semilight" Background="White" BorderThickness="1,0,0,0" BorderBrush="Black">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Presets" FontSize="22" Margin="22"/>

        <ItemsControl Grid.Row="1" ItemsSource="{collections:Presets}">

            
            
        </ItemsControl>

        <Button Content="Add" Grid.Row="2" Margin="12" Width="Auto" Padding="6"/>

    </Grid>

</UserControl>