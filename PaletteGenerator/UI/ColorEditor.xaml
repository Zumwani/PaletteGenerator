<UserControl x:Class="PaletteGenerator.UI.ColorEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:PaletteGenerator.Converters"
             xmlns:colorPicker="clr-namespace:ColorPickerLib.Controls;assembly=ColorPickerLib"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             x:Name="editor"
             FontFamily="Segoe UI Semilight" BorderBrush="LightGray">

    <UserControl.Background>
        <ImageBrush ImageSource="pack://application:,,,/Assets/transparent.png" Stretch="None"/>
    </UserControl.Background>
    
    <UserControl.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Button.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </UserControl.Resources>

    <colorPicker:ColorPicker x:Name="colorPicker" SelectedColor="{Binding ElementName=editor, Path=Color, Mode=TwoWay}"
                                StandardButtonHeader="Named Colors" AdvancedButtonHeader="Color Picker" AvailableColorsSortingMode="HueSaturationBrightness" ColorMode="ColorCanvas" ShowDropDownButton="False">

        <colorPicker:ColorPicker.ButtonStyle>
            <Style TargetType="{x:Type ToggleButton}">
                <Setter Property="Width" Value="64"/>
                <Setter Property="Height" Value="64"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            
                            <Rectangle x:Name="rectangle" Fill="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DisplayColor, Converter={converters:ToBrush}}"
                                        Stroke="LightGray" StrokeThickness="0"/>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="rectangle" Property="StrokeThickness" Value="2"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="False">
                                    <Setter TargetName="rectangle" Property="StrokeThickness" Value="0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </colorPicker:ColorPicker.ButtonStyle>

        <colorPicker:ColorPicker.Resources>
            <ResourceDictionary>

                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="Button.xaml"/>
                </ResourceDictionary.MergedDictionaries>

                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonBaseStyle}">

                    <Setter Property="Width" Value="Auto"/>
                    <Setter Property="Padding" Value="12"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Grid>
                                    
                                    <Button Template="{StaticResource ButtonTemplate}" Content="{TemplateBinding Content}"/>

                                    <ToggleButton ToolTip="Pick color from screen point" Width="28" Height="28" Visibility="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=colorPicker:ColorPicker}, Path=ColorMode, Converter={converters:ShowIf}, ConverterParameter={x:Static colorPicker:ColorMode.ColorCanvas}}" 
                                                      HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-32,0,0"
                                                      PreviewMouseLeftButtonDown="EyeDropper_PreviewMouseLeftButtonDown"
                                                      Canvas.Bottom="32" Canvas.Left="0">
                                        <ToggleButton.Content>
                                            <fa:ImageAwesome Icon="Eyedropper"/>
                                        </ToggleButton.Content>
                                    </ToggleButton>

                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Style>

            </ResourceDictionary>
        </colorPicker:ColorPicker.Resources>
    </colorPicker:ColorPicker>

</UserControl>