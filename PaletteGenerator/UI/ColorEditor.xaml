                    </ToggleButton>

                    <TabControl Grid.Row="1">
                        <TabItem Header="Freehand">
                            <colorPicker:ColorCanvas x:Name="freehand" FontFamily="Segoe UI Semilight" DisplayColorSpace="HSV" SelectedColor="{Binding ElementName=editor, Path=Color, Mode=OneWay}"/>
                        </TabItem>
                        <TabItem Header="Known Colors"/>
                    </TabControl>

                    <DockPanel LastChildFill="False" Grid.Column="1" Grid.Row="1">
                        <StackPanel>

                            

